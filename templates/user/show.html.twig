{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-header text-center">
                    <h1>User</h1>
                </div>
                <div class="card-body">
                    <table class="table table-bordered">
                        <tbody>
                            <tr>
                                <th>Id</th>
                                <td>{{ user.id }}</td>
                            </tr>
                            <tr>
                                <th>Username</th>
                                <td>{{ user.username }}</td>
                            </tr>
                            <tr>
                                <th>Email</th>
                                <td>{{ user.email }}</td>
                            </tr>
                            <tr>
                                <th>First_name</th>
                                <td>{{ user.firstName }}</td>
                            </tr>
                            <tr>
                                <th>Last_name</th>
                                <td>{{ user.lastName }}</td>
                            </tr>
                            <tr>
                                <th>Phone_number</th>
                                <td>{{ user.phoneNumber }}</td>
                            </tr>
                            <tr>
                                <th>Last_login</th>
                                <td>{{ user.lastLogin ? user.lastLogin|date('Y-m-d H:i:s') : '' }}</td>
                            </tr>
                            <tr>
                                <th>Date_created</th>
                                <td>{{ user.dateCreated ? user.dateCreated|date('Y-m-d H:i:s') : '' }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="card-footer text-center">
                    <a href="{{ path('user_index') }}" class="btn btn-primary">Back to list</a>
                    <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-info">
                        <i class="fa fa-edit"></i> Edit
                    </a>
                    <a href="{{ path('user_delete', {'id': user.id}) }}" class="btn btn-danger"
                        onclick="return confirm('Are you sure you want to delete this item?');">
                        <i class="fa fa-trash-alt"></i> Delete
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-3"></div>
    </div>
{% endblock %}