{% extends 'base.html.twig' %}

{% block title %}Edit Appointment{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-header text-center">
                    <h1>Edit Appointment</h1>
                </div>
                <div class="card-body">
                    {{ include('appointment/_form.html.twig', {'button_label': 'Update'}) }}
                </div>
                <div class="card-footer text-center">
                    <a href="{{ path('appointment_index') }}" class="btn btn-primary">Back to list</a>
                    <a href="{{ path('appointment_delete', {'id': appointment.id}) }}" class="btn btn-danger"
                        onclick="return confirm('Are you sure you want to delete this item?');">
                        <i class="fa fa-trash-alt"></i> Delete
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}