{% extends 'base.html.twig' %}

{% block title %}Appointment{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-header text-center">
                    <h1>Appointment</h1>
                </div>
                <div class="card-body">
                    <table class="table table-bordered">
                        <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ appointment.id }}</td>
                        </tr>
                        <tr>
                            <th>Username</th>
                            <td>{{ appointment.user.username ?? '' }}</td>
                        </tr>
                        <tr>
                            <th>Disease</th>
                            <td>{{ appointment.disease }}</td>
                        </tr>
                        <tr>
                            <th>Description</th>
                            <td>{{ appointment.description }}</td>
                        </tr>
                        <tr>
                            <th>Status</th>
                            <td>{{ appointment.status }}</td>
                        </tr>
                        <tr>
                            <th>Schedule_date</th>
                            <td>{{ appointment.scheduleDate ? appointment.scheduleDate|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                        </tbody>
                    </table>
                </div>
                <div class="card-footer text-center">
                    <a href="{{ path('appointment_index') }}" class="btn btn-primary">Back to list</a>
                    <a href="{{ path('appointment_edit', {'id': appointment.id}) }}" class="btn btn-info">
                        <i class="fa fa-edit"></i> Edit
                    </a>
                    <a href="{{ path('appointment_delete', {'id': appointment.id}) }}" class="btn btn-danger"
                       onclick="return confirm('Are you sure you want to delete this item?');">
                        <i class="fa fa-trash-alt"></i> Delete
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-3"></div>
    </div>
{% endblock %}